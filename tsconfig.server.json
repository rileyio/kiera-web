{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "strict": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "declaration": false,
    "sourceMap": false,
    "outDir": "production-server",
    "rootDir": "./server",
    "skipLibCheck": true,
    "typeRoots": ["./server/types"]
  },
  "include": ["server/**/*"],
  "exclude": ["node_modules", "production-server/**/*"]
}
