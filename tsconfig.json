{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "strict": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "declaration": false,
    "sourceMap": false,
    "outDir": "app",
    "rootDir": "./src",
    "skipLibCheck": true,
    "typeRoots" : ["./src/types"],
    // "inlineSourceMap": true,
    "lib": [
      "es2016",
      "dom",
      "dom.iterable"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "app/**/*"
  ]
}